<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="home-icon">
    <a href="/">üè† Home</a>
  </div>
  <div class="container">
    <h1>My Blog</h1>
    <a href="/new" class="button">Create New Post</a>
    <% if (posts.length === 0) { %>
      <p>No posts available.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <form action="/delete/<%= post.id %>" method="POST">
            <a href="/edit/<%= post.id %>" class="button">Edit</a>
            <button type="submit" class="button danger">Delete</button>
          </form>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>